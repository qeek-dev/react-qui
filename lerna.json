{
  "lerna": "2.5.1",
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "labels": {
      "enhancement": "Enhancement",
      "bug": "Bug Fix",
      "feature": "Feature",
      "component": "New Component"
    },
    "cacheDir": ".changelog"
  },
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "publish": {
      "message": "publish npm packages by lerna [ci skip]"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
